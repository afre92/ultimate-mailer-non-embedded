<style>
/* Styles for modal pop up */
.ue-blur{
  -webkit-filter: blur(5px);
  -moz-filter: blur(5px);
  -o-filter: blur(5px);
  -ms-filter: blur(5px);
  filter: blur(5px);
}

.ue-modal-wrapper{
  width:100%;
  height:100%;
  position:fixed;
  top:0; left:0;
  background:rgba(47, 47, 47, 0.6);
  display: none;
  opacity:0;
  -webkit-transition: all 0.25s ease-in-out;
  -moz-transition: all 0.25s ease-in-out;
  -o-transition: all 0.25s ease-in-out;
  transition: all 0.25s ease-in-out;
}

.ue-modal-wrapper.open{
  opacity:1;
  display:inherit ;
}

/* TODO: make modal responsive */
.ue-modal{
  width:60vw;
  height:auto;
  min-height: 60vh;
  display:block;
  margin:50vh 0 0 -30vw;
  position:relative;
  top:150vh; left:50vw;
  background:#fff;
  opacity:0;
  -webkit-transition: all 0.5s ease-in-out;
  -moz-transition: all 0.5s ease-in-out;
  -o-transition: all 0.5s ease-in-out;
  transition: all 0.5s ease-in-out;
}

.ue-modal-wrapper.open .ue-modal{
  margin-top:-200px;
  opacity:1;
}

.ue-head{
  overflow:hidden;
}

/* styles for x button to close modal */
.close {
    width: 40px;
    height: 40px;
    position: relative;
    margin-left: auto;
    cursor: pointer;
}
.close:after {
    content: '';
    height: 40px;
    border-left: 2px solid #000;
    position: absolute;
    transform: rotate(45deg);
    left: 24px;
}

.close:before {
    content: '';
    height: 40px;
    border-left: 2px solid #000;
    position: absolute;
    transform: rotate(-45deg);
    left: 24px;
}
/* end of styles for x button to close modal */

.ue-btn-close{
  width:32px;
  height:32px;
  display:block;
  float:right;
}


.ue-btn-close::before{
  margin-top:12px;
  -webkit-transform:rotate(45deg);
  -moz-transform:rotate(45deg);
  -o-transform:rotate(45deg);
  transform:rotate(45deg);
}

.ue-btn-close::after{
  margin-top:-6px;
  -webkit-transform:rotate(-45deg);
  -moz-transform:rotate(-45deg);
  -o-transform:rotate(-45deg);
  transform:rotate(-45deg);
}

.ue-content{
  padding:2%;
}

/* End of styles for modal */

/* Start of styles for slideshow */
* {box-sizing:border-box}

/* Slideshow container */
.slideshow-container {
  max-width: 1000px;
  position: relative;
  margin: auto;
}

/* Hide the images by default */
.mySlides {
  display: none;
}

/* Next & previous buttons */
.next {
  cursor: pointer;
  position: absolute;
  top: 50%;
  width: auto;
  right: -60px;
  margin-top: -22px;
  padding: 16px;
  color: white;
  font-size: 40px;
  user-select: none;
}

.prev {
  cursor: pointer;
  position: absolute;
  top: 50%;
  width: auto;
  left: -60px;
  margin-top: -22px;
  padding: 16px;
  color: white;
  font-size: 40px;
  user-select: none;
}

/* Position the "next button" to the right */
.next {
  
  border-radius: 3px 0 0 3px;
}

/* On hover, add a black background color with a little bit see-through */
.prev:hover, .next:hover {
  color: #fff !important;
}

/* Number text (1/3 etc) */
.numbertext {
  color: #f2f2f2;
  font-size: 12px;
  padding: 8px 12px;
  position: absolute;
  top: 0;
}

/* The dots/bullets/indicators */
.dot {
  cursor: pointer;
  height: 15px;
  width: 15px;
  margin: 0 2px;
  background-color: #bbb;
  border-radius: 50%;
  display: inline-block;
  transition: background-color 0.6s ease;
}

.active, .dot:hover {
  background-color: #717171;
}

/* Fading animation */
.fade {
  -webkit-animation-name: fade;
  -webkit-animation-duration: 1.5s;
  animation-name: fade;
  animation-duration: 1.5s;
}

@-webkit-keyframes fade {
  from {opacity: .4}
  to {opacity: 1}
}

@keyframes fade {
  from {opacity: .4}
  to {opacity: 1}
}
/* End of styles for slideshow */
.review-photo {
  cursor: pointer;
} 


.pagination {
  padding: 3px;
  margin: 3px;
}
.pagination a {
  padding: 2px 5px 2px 5px;
  margin: 2px;
  border: 1px solid #aaaadd;
  text-decoration: none;
  color: #000099;
}
.pagination a:hover, .pagination a:active {
  border: 1px solid #000099;
  color: #000;
}
.pagination span.current {
  padding: 2px 5px 2px 5px;
  margin: 2px;
  border: 1px solid #000099;
  font-weight: bold;
  background-color: #000099;
  color: #FFF;
}
.pagination span.disabled {
  padding: 2px 5px 2px 5px;
  margin: 2px;
  border: 1px solid #eee;
  color: #ddd;
}

/* start of rating */

.ue-rating {
  display: inline-block;
  unicode-bidi: bidi-override;
  color: #efefef;
  font-size: 25px;
  height: 25px;
  width: auto;
  margin: 0;
  position: relative;
  padding: 0;
}

.ue-rating-upper {
  color: <%= @shop.star_color %>;
  padding: 0;
  position: absolute;
  z-index: 1;
  display: flex;
  top: 0;
  left: 0;
  overflow: hidden;
}

.ue-rating-lower {
  padding: 0;
  display: flex;
  z-index: 0;
}

/* End of style for rating stars */


/* start of small rating */

.ue-small-rating {
  display: inline-block;
  unicode-bidi: bidi-override;
  color: #efefef;
  font-size: 20px;
  height: 20px;
  width: auto;
  margin: 0;
  position: relative;
  padding: 0;
}

.big-median {
  font-size: 40px;
  font-weight: 600;
}

.ue-review {
  border: 1px solid #eee;
  margin-bottom: 30px;
  padding-top: 25px;
  padding: 24px;
  background-color: #fafafa;
}

.ue-review-content {
  margin: 0 0 15px;
  clear: both;
}
/* End of style for small rating stars */

/* body.modal-open {
    overflow: hidden;
} */

.modal-window {
  position: fixed;
  /* display: none; */
  background-color: rgba(255, 255, 255, 0.25);
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  z-index: 999;
  visibility: hidden;
  opacity: 0
  pointer-events: none;
  transition: all 0.3s;
}
 .modal-window:target {
	 /* visibility: visible; */

}

.visible {
  visibility: visible;
  opacity: 1;
  pointer-events: auto;
  display: inherit !important;
}


 .modal-window > div {
	 width: 60%;
	 position: absolute;
	 top: 50%;
	 left: 50%;
	 transform: translate(-50%, -50%);
	 padding: 2em;
	 background: #fff;
}
 .modal-window header {
	 font-weight: bold;
}
 .modal-window h1 {
	 font-size: 150%;
	 margin: 0 0 15px;
}
 .modal-close {
	 color: #aaa;
	 line-height: 50px;
	 font-size: 80%;
	 position: absolute;
	 right: 0;
	 text-align: center;
	 top: 0;
	 width: 70px;
	 text-decoration: none;
}
 .modal-close:hover {
	 color: black;
}
/* Demo Styles */


 a {
	 color: inherit;
}
 .ue-container {
	 display: grid;
	 justify-content: center;
	 align-items: center;
}
 .modal-window div:not(:last-of-type) {
	 margin-bottom: 15px;
}
 small {
	 color: #aaa;
}
 .btn {
	 background-color: #fff;
	 padding: 1em 1.5em;
	 border-radius: 3px;
	 text-decoration: none;
}
 .btn i {
	 padding-right: 0.3em;
}
