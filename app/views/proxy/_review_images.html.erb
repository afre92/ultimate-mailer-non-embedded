<div class="slideshow-container" style="display: flex;">
  <div style="width: 60%;">
    <% @review.images.each_with_index do |image, index|%>
      <!-- Full-width images with number and caption text -->

      <div class="mySlides fade">
        <div class="numbertext"><%= index+1 %> / <%= @review.images.count %></div>
        <%= image_tag_remote(image) %>
      </div>
    <% end %>
  <!-- Next and previous buttons -->
  <a class="prev" onclick="plusSlides(-1)">&#10094;</a>
  <a class="next" onclick="plusSlides(1)">&#10095;</a>
  </div>
  <div style="width: 40%;">
    <div class="close ue-trigger"></div>
    <div class="modal-review-content" style="padding: 20px;">
      <div style="padding-bottom: 20px; display:flex">
        <b style="font-size: larger;"><%= @review.customer_name_abbreviated %></b>&nbsp;<b style="color: #1cc286; font-size: larger;">  Verified Buyer </b>
      </div>
      <div style="padding-bottom: 10px; display: flex; justify-content: space-between;">
        <div>
          <%= @review.rating_stars %>
        </div> 
        <div style="font-size: smaller; color: grey;">
          <%= time_ago_in_words(@review.updated_at) %> ago
        </div>

      </div>
      <div style="padding-bottom: 10px;">
         <b><%= @review.title.upcase %> </b>
      </div>
      <div>
        <%= @review.description %>
      </div>
    </div>
  </div>
</div>
<br>

<!-- The dots/circles -->

<div style="text-align:center">
  <% @review.images.each_with_index do |image, index|%>
    <span class="dot" onclick="currentSlide(<%= index+1 %>)"></span>
  <% end %>
</div>