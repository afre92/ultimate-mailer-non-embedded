<div class="slideshow-container" style="display: flex;">
  <div style="width: 70%;">
    <% @review.images.each_with_index do |image, index|%>
      <!-- Full-width images with number and caption text -->

      <div class="mySlides fade">
        <div class="numbertext"><%= index+1 %> / <%= @review.images.count %></div>
        <%= image_tag_remote(image) %>
      </div>
    <% end %>
  <!-- Next and previous buttons -->
  <a class="prev" onclick="plusSlides(-1)">&#10094;</a>
  <a class="next" onclick="plusSlides(1)">&#10095;</a>
  </div>
  <div style="width: 30%;">
  <div class="close ue-trigger"></div>
   <%# <a class="ue-btn-close ue-trigger" ></a> %>
    <div class="modal-review-content" style="padding: 20px;">
      <div>
        buyer name goes here
      </div>
      <div>
        rating and updated_at
      </div>
      <div>
        review description
      </div>
    </div>
  </div>
</div>
<br>

<!-- The dots/circles -->

<div style="text-align:center">
  <% @review.images.each_with_index do |image, index|%>
    <span class="dot" onclick="currentSlide(<%= index+1 %>)"></span>
  <% end %>
</div>