$('div.alert').remove();
window.scrollTo(0,0);
var type, message;
if("<%= raw @saved %>" === "true"){
  type = "success"
  message = "<b> Success - </b> Template succesfully updated"
} else {
  type = "danger"
  var template = "<%= raw @template.errors.messages[:invalid].first %> "
  message = `Ooops! - invalid notation on <b style='font-size: larger;'>${template}</b>, please make a correction and try again.`
}

alerts.showNotification(type, message)
