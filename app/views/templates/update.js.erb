$('div.alert').remove();
window.scrollTo(0,0);
if("<%= raw @saved %>" === "true"){
  $('body').prepend('<div class="alert alert-success alert-dismissible fade show text-center"><button type="button" aria-hidden="true" class="close" data-dismiss="alert" aria-label="Close"><i class="nc-icon nc-simple-remove"></i></button><span><b> Success - </b> This template has be succesfully updated</span></div>')
} else {
  var template = "<%= raw @template.errors.messages[:invalid].first %> "
  $('body').prepend('<div class="alert alert-danger alert-dismissible fade show text-center"><button type="button" aria-hidden="true" class="close" data-dismiss="alert" aria-label="Close"><i class="nc-icon nc-simple-remove"></i></button><span> Ooops! something is not right -  code such as <b style="font-size: larger;">'+template+'</b> are invalid  </span></div')
}
