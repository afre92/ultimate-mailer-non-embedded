if(<%= raw @saved %>){
  window.scrollTo(0,0);
  $('body').prepend('<div class="alert alert-success alert-dismissible fade show text-center"><button type="button" aria-hidden="true" class="close" data-dismiss="alert" aria-label="Close"><i class="nc-icon nc-simple-remove"></i></button><span><b> Success - </b> This template has be succesfully updated</span></div>')
} else {
  $('body').prepend('<div class="alert alert-danger alert-dismissible fade show text-center"><button type="button" aria-hidden="true" class="close" data-dismiss="alert" aria-label="Close"><i class="nc-icon nc-simple-remove"></i></button><span><b> Failure - </b> This template could NOT be updated</span></div>')
}
